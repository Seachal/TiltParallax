<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rusili.lib.parallax.ParallaxThreeLayerView
        android:id="@+id/sampleParallax"
        android:layout_width="0dp"
        android:layout_height="256dp"
        app:image_background="@drawable/sample_parallax_background"
        app:image_foreground="@drawable/sample_parallax_foreground"
        app:image_middleground="@drawable/sample_parallax_middleground"
        app:intensity_background="1.35"
        app:intensity_foreground="1.10"
        app:intensity_middleground="1.225"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
